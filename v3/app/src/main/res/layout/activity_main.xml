<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0f1a"
    tools:context=".MainActivity">

    <!-- Test Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ Reaction Test"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/connection_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Disconnected"
            android:textColor="#ff6b6b"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_textview" />

        <!-- Center content area -->
        <LinearLayout
            android:id="@+id/center_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@id/connection_status_textview"
            app:layout_constraintBottom_toTopOf="@id/start_button">

            <TextView
                android:id="@+id/reaction_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Reaction Time"
                android:textColor="#8888aa"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:cardBackgroundColor="#1a1a2e"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/reaction_time_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-- ms"
                    android:textColor="#00ff88"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingVertical="32dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:text="START"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#e94560"
            android:layout_marginBottom="32dp"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shake micro:bit to restart"
            android:textColor="#555566"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/start_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Battle Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battle_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <TextView
            android:id="@+id/battle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš”ï¸ Battle Mode"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/battle_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press START to begin"
            android:textColor="#8888aa"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/battle_title" />

        <!-- Players row with VS in middle -->
        <LinearLayout
            android:id="@+id/players_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/battle_status">

            <!-- Player 1 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/player1_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#1a1a2e"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P1"
                        android:textColor="#4fc3f7"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/player1_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#4fc3f7"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ms"
                        android:textColor="#4fc3f7"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- VS Badge - fixed width -->
            <TextView
                android:id="@+id/vs_text"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="VS"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/vs_badge_background"
                android:layout_marginHorizontal="8dp" />

            <!-- Player 2 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/player2_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#1a1a2e"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P2"
                        android:textColor="#ff8a65"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/player2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#ff8a65"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ms"
                        android:textColor="#ff8a65"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Winner/Status Display -->
        <TextView
            android:id="@+id/winner_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#00ff88"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/players_container"
            app:layout_constraintBottom_toTopOf="@id/battle_start_button" />

        <TextView
            android:id="@+id/turn_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wait for flash..."
            android:textColor="#aaaaaa"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/players_container"
            app:layout_constraintBottom_toTopOf="@id/battle_start_button" />

        <Button
            android:id="@+id/battle_start_button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:text="START BATTLE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#e94560"
            android:layout_marginBottom="32dp"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Memory Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memory_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <TextView
            android:id="@+id/memory_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Number Memory"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/memory_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textColor="#00ff88"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/memory_title" />

        <TextView
            android:id="@+id/memory_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Press START to begin"
            android:textColor="#8888aa"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/memory_level" />

        <!-- Number Display Area -->
        <androidx.cardview.widget.CardView
            android:id="@+id/memory_display_card"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1a1a2e"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/memory_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/memory_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="?"
                android:textColor="#ffd54f"
                android:textSize="52sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.1" />

        </androidx.cardview.widget.CardView>

        <!-- Input Area -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/memory_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/memory_display_card"
            app:boxBackgroundColor="#1a1a2e"
            app:boxStrokeColor="#00ff88"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:hintTextColor="#666688">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/memory_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the numbers"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:gravity="center"
                android:fontFamily="monospace"
                android:imeOptions="actionDone"
                android:paddingVertical="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Result Text -->
        <TextView
            android:id="@+id/memory_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/memory_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- High Score -->
        <TextView
            android:id="@+id/memory_high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† Best: 0 digits"
            android:textColor="#8888aa"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/memory_submit_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/memory_submit_button"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:text="START"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#e94560"
            android:layout_marginBottom="32dp"
            app:cornerRadius="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- History Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <TextView
            android:id="@+id/history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š History"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/history_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="#8888aa"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/history_stats"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1a1a2e"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
